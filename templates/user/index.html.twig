{% extends "base.html.twig" %}
{% block content %}
    <main>
        <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10" style="background-color: red;">
            <div class="container-fluid px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon">
                                    <i data-feather="user"></i>
                                </div>
                                Liste des Users                       
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-fluid px-4">
        <div class="row">
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                            <div class="media d-flex">
                                <div class="align-self-center">
                                <i class="icon-users primary font-large-2 float-left"></i>
                                </div>
                                <div class="media-body text-right">
                                <h3>{{ adhs }}</h3>
                                <span>Adhérants</span>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                            <div class="media d-flex">
                                <div class="align-self-center">
                                <i class="icon-users success font-large-2 float-left"></i>
                                </div>
                                <div class="media-body text-right">
                                <h3>{{ prnts }}</h3>
                                <span>Parents</span>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                            <div class="media d-flex">
                                <div class="align-self-center">
                                <i class="icon-users warning font-large-2 float-left"></i>
                                </div>
                                <div class="media-body text-right">
                                <h3>{{ cchs }}</h3>
                                <span>Coachs</span>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                            <div class="media d-flex">
                                <div class="align-self-center">
                                <i class="icon-users danger font-large-2 float-left"></i>
                                </div>
                                <div class="media-body text-right">
                                <h3>{{ docs }}</h3>
                                <span>Doctors</span>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
            {% if app.user.roles['ROLE_ADMIN'] is defined or app.user.roles['ROLE_MASTER'] is defined %}
                <div class="col-12 col-xl-auto mb-3">
                    <a class="btn btn-sm btn-light text-primary" href="{{ path('app_user_new') }}" style="float:right">
                        <i class="me-1" data-feather="plus"></i>
                        Ajouter User                                                                                   
                    </a>
                </div>
            {% endif %}
                <div class="card-body table-responsive">
                    <table class="table" id="datatablesSimple">
                        <thead>
                            <tr>
                                <tr>
                                    <th>#</th>
                                    <th>Email</th>
                                    <th>Reférence</th>
                                    <th></th>
                                </tr>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.Email }}</td>
                                    <td>{{ user.ref }}</td>
                                    
                                    <td>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('app_user_show', {'id': user.id}) }}">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('app_user_edit', {'id': user.id}) }}">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2">
                                            {{ include('user/_delete_form.html.twig') }}
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="9">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
